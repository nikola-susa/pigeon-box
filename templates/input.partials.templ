package templates

import (
    "github.com/nikola-susa/secret-chat/model"
)

templ singleFileInput(file model.RenderFile) {
    <a  href={ templ.URL("/t/" + file.ThreadHash + "/f/" + file.ID) }  tabindex="0"
        class="flex flex-col p-0.5 my-2 gap-0.5 border rounded-md shadow w-[200px] hover:border-success focus:border-success">
        @contentType(file.ContentType)
        <div class="flex flex-col gap-0.5 mx-1.5 !pb-1.5">
            <div class="truncate">
                {file.Name}
            </div>
            <div class="text-alt-foreground">
                { file.Size }
            </div>
        </div>
    </a>
}

